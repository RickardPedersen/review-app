<!DOCTYPE html>
<html>

<head>
    <% include ./partials/head %>
</head>

<body>
    <% include ./partials/navbar %>

    <div class="container">
        <h1 class="display-4">Redigera restaurang</h1>
        <form action="/restaurants/edit/<%= restaurant.name %>" method="POST">
            <div class="form-group">
                <label for="nameInput">Restaurangens namn</label>
                <input type="text" class="form-control" id="nameInput" name="nameInput" value="<%= restaurant.name %>">
            </div>
            <div class="form-group">
                <label for="locationInput">Stad</label>
                <input type="text" class="form-control" id="locationInput" name="locationInput" value="<%= restaurant.location %>">
            </div>
            <div class="form-group">
                <label for="genreInput">Genre</label>
                <select class="custom-select" id="genreInput" name="genreInput">
                    <option value="<%= restaurant.genre %>" selected><%= restaurant.genre %></option>
                    <option value="Pizza">Pizza</option>
                    <option value="Hamburgare">Hamburgare</option>
                    <option value="Sushi">Sushi</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Redigera</button>
        </form>
    </div>

    <% include ./partials/scripts %>
</body>

</html>