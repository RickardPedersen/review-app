<!DOCTYPE html>
<html>

<head>
    <% include ./partials/head %>
</head>

<body>
    <% include ./partials/navbar %>

    <div class="container">
        <h1 class="display-4">Skriv en recension</h1>
        <form action="/restaurants/review" method="POST">
            <div class="form-group">
                <label for="restaurantInput">Restaurang</label>
                <select class="custom-select" id="restaurantInput" name="restaurantInput">
                    <option selected>Open this select menu</option>
                    <% for (restaurant of restaurants) { %>
                    <option value="<%= restaurant.restaurantID %>"><%= restaurant.name %></option>
                    <% } %>

                </select>
            </div>

            <div class="form-group">
                <label for="ratingInput">Betyg</label>
                <select class="custom-select" id="ratingInput" name="ratingInput">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option selected value="5">5</option>
                </select>
            </div>
            <div class="form-group">
                <label for="messageInput">Recension</label>
                <textarea class="form-control" id="messageInput" name="messageInput" rows="3"></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

    <% include ./partials/scripts %>
</body>

</html>
